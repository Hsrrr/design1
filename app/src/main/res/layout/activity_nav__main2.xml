<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#15ccf2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/note_back"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="11dp"
            android:text="班课"/>
        <TextView
            android:id="@+id/note_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="作业查"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/chazhao"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:src="@drawable/chazhao" />
    </RelativeLayout>
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#7CCED9"
        android:background="@drawable/item_bg_selector"
        android:layout_weight="1"
        android:scrollbars="none"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#15ccf2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/faxian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/faxain"
            android:tint="#03DAf5"
            android:paddingTop="5dp"/>
        <ImageView
            android:id="@+id/mys"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/classq"
            android:tint="#272727"
            android:paddingTop="5dp"/>
        <ImageView
            android:id="@+id/note_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tint="#272727"
            android:layout_height="wrap_content"
            android:src="@drawable/mys"
            android:paddingTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/faxianwenzi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:text="班级"
            android:textColor="#272727"
            android:gravity="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/myswenzi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发现"
            android:textColor="#272727"
            android:gravity="center"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/wenzi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="25dp"
            android:textColor="#272727"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>
